{
  "name": "firstfly",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "bunx --bun astro dev",
    "build:client": "bunx --bun astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "worker": "wrangler dev",
    "deploy": "astro build && wrangler deploy",
    "dryrun:staging": "bun run build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "bun run build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "bun run build:client && wrangler deploy --env staging",
    "deploy:prod": "bun run build:client && wrangler deploy --env production",
    "typegen": "wrangler types",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx,astro}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,jsx,tsx,astro}' --fix",
    "dev": "concurrently \"bun run client\" \"bun run worker\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply firstfly-local-db --local",
    "db:migrate:staging": "wrangler d1 migrations apply firstfly-staging-db --remote --env staging",
    "create:test:db": "bun run ./scripts/create-test-db.ts",
    "destroy:test:db": "bun run ./scripts/destroy-test-db.ts",
    "test": "bun run create:test:db && bun test && bun run destroy:test:db"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@fontsource/iosevka": "^5.2.5",
    "@lucide/astro": "^0.561.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.6",
    "astro-typewriter": "^1.1.0",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251224.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "astro-eslint-parser": "^1.2.2",
    "daisyui": "^5.5.14",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "lefthook": "^2.0.12",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "wrangler": "^4.56.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": "eslint --fix",
    ".": "prettier --write",
    "*.{json,css,md}": "prettier --write"
  }
}
