{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {},
  "linter": {
    "rules": {
      "style": {
        "noNamespace": "off",
        "useFilenamingConvention": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["*.jsonc"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    }
  ],
  "extends": ["ultracite/core", "ultracite/astro", "ultracite/react"]
}
